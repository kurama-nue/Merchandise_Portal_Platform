import { Link, useNavigate } from 'react-router-dom';
import { useAuth } from '../contexts/AuthContext';
import useCartStore from '../stores/cartStore';
import { motion, AnimatePresence } from 'framer-motion';
import { ShoppingBag, LogOut, Menu, X } from 'lucide-react';
import { useState } from 'react';
import { ThemeToggle } from './ui/theme-toggle';
import { Button } from './ui/button';

const Navbar = () => {
  const { user, isAuthenticated, logout } = useAuth();
  const navigate = useNavigate();
  const totalItems = useCartStore(state => state.getTotalItems());
  const [mobileMenuOpen, setMobileMenuOpen] = useState(false);
  
  const handleLogout = () => {
    logout();
    navigate('/');
    setMobileMenuOpen(false);
  };
  
  return (
    <motion.nav 
      className="sticky top-0 z-40 w-full backdrop-blur-lg bg-white/95 dark:bg-gray-900/95 border-b border-gray-200/50 dark:border-gray-700/50 shadow-sm"
      initial={{ y: -100 }}
      animate={{ y: 0 }}
      transition={{ type: 'spring', stiffness: 300, damping: 30 }}
    >
      <div className="container mx-auto px-4 py-3">
        <div className="flex items-center justify-between">
          <motion.div
            initial={{ opacity: 0, x: -20 }}
            animate={{ opacity: 1, x: 0 }}
            transition={{ duration: 0.5 }}
          >
            <Link to="/" className="flex items-center space-x-2">
              <motion.div
                whileHover={{ scale: 1.05 }}
                whileTap={{ scale: 0.95 }}
                className="text-2xl font-bold bg-gradient-to-r from-teal-500 to-amber-500 bg-clip-text text-transparent"
              >
                Nexus
              </motion.div>
            </Link>
          </motion.div>
          
          {/* Desktop Navigation */}
          <div className="hidden md:flex items-center space-x-6">
            <Link 
              to="/products" 
              className="relative text-gray-700 dark:text-gray-200 hover:text-brand-teal dark:hover:text-brand-amber transition-colors group"
            >
              Products
            </Link>
            
            {isAuthenticated && (
              <>
                {user?.role === 'DEPT_HEAD' && (
                  <Link 
                    to="/group-orders" 
                    className="text-gray-700 dark:text-gray-200 hover:text-brand-teal dark:hover:text-brand-amber transition-colors"
                  >
                    Group Orders
                  </Link>
                )}
                
                <Link 
                  to="/orders" 
                  className="text-gray-700 dark:text-gray-200 hover:text-brand-teal dark:hover:text-brand-amber transition-colors"
                >
                  My Orders
                </Link>
                
                <Link 
                  to="/reviews" 
                  className="text-gray-700 dark:text-gray-200 hover:text-brand-teal dark:hover:text-brand-amber transition-colors"
                >
                  Reviews
                </Link>
                
                {user?.role === 'ADMIN' && (
                  <Link 
                    to="/admin" 
                    className="text-gray-700 dark:text-gray-200 hover:text-brand-teal dark:hover:text-brand-amber transition-colors"
                  >
                    Admin
                  </Link>
                )}
              </>
            )}
            
            <ThemeToggle />
            
            <Link to="/cart" className="relative">
              <motion.div whileHover={{ scale: 1.1 }} whileTap={{ scale: 0.9 }}>
                <ShoppingBag className="h-6 w-6 text-gray-700 dark:text-gray-200" />
                {totalItems > 0 && (
                  <motion.span 
                    initial={{ scale: 0 }}
                    animate={{ scale: 1 }}
                    className="absolute -top-2 -right-2 bg-gradient-to-r from-teal-500 to-amber-500 text-white text-xs font-medium rounded-full h-5 w-5 flex items-center justify-center"
                  >
                    {totalItems}
                  </motion.span>
                )}
              </motion.div>
            </Link>
            
            {isAuthenticated ? (
              <motion.button
                whileHover={{ scale: 1.1 }}
                whileTap={{ scale: 0.9 }}
                onClick={handleLogout}
                className="text-gray-700 dark:text-gray-200"
              >
                <LogOut className="h-6 w-6" />
              </motion.button>
            ) : (
              <Link to="/login">
                <Button 
                  variant="gradient" 
                  size="sm" 
                  className="rounded-full bg-gradient-to-r from-teal-500 to-amber-500 text-white font-medium px-6 py-2"
                >
                  Login
                </Button>
              </Link>
            )}
          </div>

          {/* Mobile Menu Button */}
          <div className="md:hidden flex items-center space-x-4">
            <ThemeToggle />
            
            <Link to="/cart" className="relative">
              <ShoppingBag className="h-6 w-6 text-gray-700 dark:text-gray-200" />
              {totalItems > 0 && (
                <span className="absolute -top-2 -right-2 bg-gradient-to-r from-teal-500 to-amber-500 text-white text-xs rounded-full h-5 w-5 flex items-center justify-center">
                  {totalItems}
                </span>
              )}
            </Link>
            
            <button
              onClick={() => setMobileMenuOpen(!mobileMenuOpen)}
              className="text-gray-700 dark:text-gray-200"
            >
              {mobileMenuOpen ? <X className="h-6 w-6" /> : <Menu className="h-6 w-6" />}
            </button>
          </div>
        </div>
        
        {/* Mobile Menu */}
        <AnimatePresence>
          {mobileMenuOpen && (
            <motion.div
              initial={{ opacity: 0, height: 0 }}
              animate={{ opacity: 1, height: 'auto' }}
              exit={{ opacity: 0, height: 0 }}
              className="md:hidden border-t mt-2"
            >
              <div className="py-4 space-y-4">
                <Link 
                  to="/products" 
                  className="block px-4 text-gray-700 dark:text-gray-200 hover:text-brand-teal dark:hover:text-brand-amber"
                  onClick={() => setMobileMenuOpen(false)}
                >
                  Products
                </Link>
                
                {isAuthenticated && (
                  <>
                    {user?.role === 'DEPT_HEAD' && (
                      <Link 
                        to="/group-orders" 
                        className="block px-4 text-gray-700 dark:text-gray-200 hover:text-brand-teal dark:hover:text-brand-amber"
                        onClick={() => setMobileMenuOpen(false)}
                      >
                        Group Orders
                      </Link>
                    )}
                    
                    <Link 
                      to="/orders"
                      className="block px-4 text-gray-700 dark:text-gray-200 hover:text-brand-teal dark:hover:text-brand-amber"
                      onClick={() => setMobileMenuOpen(false)}
                    >
                      My Orders
                    </Link>
                    
                    <Link 
                      to="/reviews"
                      className="block px-4 text-gray-700 dark:text-gray-200 hover:text-brand-teal dark:hover:text-brand-amber"
                      onClick={() => setMobileMenuOpen(false)}
                    >
                      Reviews
                    </Link>
                    
                    {user?.role === 'ADMIN' && (
                      <Link 
                        to="/admin"
                        className="block px-4 text-gray-700 dark:text-gray-200 hover:text-brand-teal dark:hover:text-brand-amber"
                        onClick={() => setMobileMenuOpen(false)}
                      >
                        Admin
                      </Link>
                    )}
                    
                    <button
                      onClick={handleLogout}
                      className="block w-full text-left px-4 text-gray-700 dark:text-gray-200 hover:text-brand-teal dark:hover:text-brand-amber"
                    >
                      Logout
                    </button>
                  </>
                ) : (
                  <Link 
                    to="/login"
                    className="block px-4 text-gray-700 dark:text-gray-200 hover:text-brand-teal dark:hover:text-brand-amber"
                    onClick={() => setMobileMenuOpen(false)}
                  >
                    Login
                  </Link>
                )}
              </div>
            </motion.div>
          )}
        </AnimatePresence>
      </div>
    </motion.nav>
  );
};

export default Navbar;
