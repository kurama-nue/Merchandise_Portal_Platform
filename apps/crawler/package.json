{
  "name": "@merch-portal/crawler",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "start": "node dist/cli.js",
    "dev": "ts-node src/cli.ts",
    "discover": "ts-node src/cli.ts --start-url=https://www.thesouledstore.com/sitemap.xml --output=products.urls.json",
    "extract": "ts-node src/cli.ts --start-url=https://www.thesouledstore.com/sitemap.xml --output=products.json",
    "run": "npm run build && node dist/cli.js --start-url=https://www.thesouledstore.com/sitemap.xml --output=products.json"
  },
  "dependencies": {
    "cheerio": "^1.0.0-rc.12",
    "cross-fetch": "^4.0.0",
    "dotenv": "^16.4.5",
    "fast-xml-parser": "^4.4.1",
    "pg": "^8.12.0",
    "p-limit": "^5.0.0",
    "p-retry": "^6.2.0",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@types/cheerio": "^0.22.35",
    "@types/node": "^20.14.10",
    "@types/uuid": "^9.0.8",
    "ts-node": "^10.9.2",
    "typescript": "^5.6.2"
  }
}